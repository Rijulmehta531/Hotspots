<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="480dp"
    tools:context=".rating"
    android:background="#ECCD7D">


    <RatingBar
        android:id="@+id/beer_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:isIndicator="false"
        android:rating="0.0"
        android:stepSize="0.5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="25dp"
        style="@android:style/Widget.DeviceDefault.RatingBar.Small"
        android:textSize='30dp'
        />
    <RatingBar
        android:id="@+id/wine_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:isIndicator="false"
        android:rating="0.0"
        android:stepSize="0.5"
        app:layout_constraintTop_toBottomOf="@id/beer_rating"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="25dp"
        android:textSize='30dp'
        style="@android:style/Widget.DeviceDefault.RatingBar.Small"/>
    <RatingBar
        android:id="@+id/music_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:isIndicator="false"
        android:rating="0.0"
        android:stepSize="0.5"
        app:layout_constraintTop_toBottomOf="@id/wine_rating"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="25dp"
        android:textSize='30dp'
        style="@android:style/Widget.DeviceDefault.RatingBar.Small"/>

    <Button
        android:id="@+id/button_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="156dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="167dp"
        android:text="Save"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/music_rating"
        android:backgroundTint="@color/button_color"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/beer_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Beer:"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteX="70dp"
        tools:layout_editor_absoluteY="24dp"
        android:layout_marginLeft="90dp"
        android:textStyle='bold'
        android:textSize='18dp'
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="23dp"/>

    <TextView
        android:id="@+id/wine_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wine:"
        tools:layout_editor_absoluteX="69dp"
        tools:layout_editor_absoluteY="62dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="90dp"
        android:textStyle='bold'
        android:textSize='18dp'
        app:layout_constraintTop_toBottomOf="@id/beer_rating"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/music_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Music:"
        tools:layout_editor_absoluteX="73dp"
        tools:layout_editor_absoluteY="104dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="90dp"
        android:textStyle='bold'
        android:textSize='18dp'
        app:layout_constraintTop_toBottomOf="@id/wine_rating"
        android:layout_marginTop="20dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>